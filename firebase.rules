rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /bookings/{bookingId} {
      allow read: if isSignedIn();

      allow create: if isSignedIn() &&
        request.resource.data.keys().hasAll(['date','spot','licensePlate','name','userId','createdAt']) &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.spot in [1,2,3] &&
        request.resource.data.licensePlate is string &&
        request.resource.data.licensePlate.size() == 6 &&
        request.resource.data.name is string &&
        request.resource.data.name.size() > 0 &&
        request.resource.data.date is string;

      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid; // Users can only cancel their own bookings

      allow update: if false; // disallow updates
    }

    match /cars/{carId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn(); // Users can list their own cars via query

      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.licensePlate is string &&
        request.resource.data.licensePlate.size() == 6;

      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;

      allow update: if false; // disallow updates
    }
  }
}


